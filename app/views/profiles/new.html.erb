<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Creating the Profile of a Gamer</h1>
    <p class="text-center">All Gamers need to strut - play games and link to an awesome community</p>
    <div>
      <%= form_for @profile, url: user_profile_path do |f| %>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :job_title %>
          <%= f.select :job_title, ['Developer', 'Streamer', 'Creator'], {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :contact_email %>
          <%= f.text_field :contact_email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :who_i_am %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Create", class: 'btn btn-default' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
