<div class="form-bg">
  <div class="row form-box">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-top">
        <div class="form-top-left">
          <% if params[:plan] == "2"%>
            <h1>Pro Account</h1>
            <p>Sign Up to Game to your hearts content and hosts your own main profile and content</p>
          <% else %>
            <h1>Basic Account</h1>
            <p>Sign Up to Game to your hearts content</p>
          <% end %>
        </div>

        <div class="form-top-right">
          <i class="fa fa-user"></i>
        </div>
      </div>

    <!-- rendering forms -->
      <% if params[:plan] == "2"%>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>

  </div>
</div>
